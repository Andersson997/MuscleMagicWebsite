
<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/media.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap"
          rel="stylesheet" />
    <script src="https://kit.fontawesome.com/e58fdfd909.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <nav>
        <div class="logo">
            <a asp-action="Index" asp-controller="Home">
                <h2>MUSCLE MAGIC</h2>
            </a>
        </div>
        <ul class="nav-links">
            <li>
                <a asp-action="Myaccount" asp-controller="Home">My Account</a>
            </li>
            <li>
                <a asp-action="Muscle_group_selection" asp-controller="Exercise">Exercises</a>
            </li>
            <li>
                <a asp-action="Programs" asp-controller="Program">Programs</a>
            </li>
        </ul>
        <div class="login">
            @if (User.Identity.IsAuthenticated)
            {
                <input type="button" value="Log Out" onclick="location.href='@Url.Action("SignOutUser", "Home")'" />
            }
            else
            {
                <button class="loginbtn">Log in / Register</button>
            }
        </div>
        <div class="burger">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
        </div>
    </nav>
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="loginsignup-container">
                    <div class="loginsignup" id="loginsignup">
                        <div class="form-container sign-up-container">
                            <form onsubmit="return false;">
                                <h1>Create Account</h1>
                                <div class="social-container">
                                    <a href="#" class="fb"><i class="fab fa-facebook-f"></i></a>
                                    <a href="#" class="social">
                                        <i class="fab fa-google-plus-g"></i>
                                    </a>
                                    <a href="#" class="social">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                </div>
                                <span>or use your email for registration</span>
                                <input id="fname" type="text" placeholder="Firstname" />
                                <input id="lname" type="text" placeholder="Lastname" />
                                <input id="email" type="text" placeholder="Email" />
                                <input id="password" type="password" placeholder="Password" />
                                <div id="errormsg"></div>
                                <button class="signup-in" id="register">Sign Up</button>
                                <button id="cancel-modal1">Cancel</button>
                            </form>
                        </div>
                        <div class="form-container sign-in-container">
                           <form onsubmit="return false;">
                               <h1>Sign in</h1>
                               <div class="social-container">
                                   <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                   <a href="#" class="social">
                                       <i class="fab fa-google-plus-g"></i>
                                   </a>
                                   <a href="#" class="social">
                                       <i class="fab fa-linkedin-in"></i>
                                   </a>
                               </div>
                               <span>or use your account</span>
                               <input id="email2" type="text" placeholder="Email" />
                               <input id="password2" type="password" placeholder="Password" />

                               <div id="incorrect-credentials"></div>
                               <button class="signup-in" id="login">Sign In</button>
                               <button id="cancel-modal2">Cancel</button>
                           </form>
                        </div>
                        <div class="overlay-container">
                            <div class="overlay">
                                <div class="overlay-panel overlay-left">
                                    <h1>Hey big guy</h1>
                                    <p>
                                        Log in here to continue your journey to becoming swole
                                    </p>
                                    <button class="ghost" id="signIn">Sign In</button>
                                </div>
                                <div class="overlay-panel overlay-right">
                                    <h1>Hello, Friend!</h1>
                                    <p>
                                        Register here and start your journey to becoming swole with us
                                    </p>
                                    <button class="ghost" id="signUp">Sign Up</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
       
    @RenderBody()
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>

